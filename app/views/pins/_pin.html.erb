<div class="box">
	<%= link_to (image_tag pin.image(:medium)), "#myModal#{pin.id}", "data-toggle" => "modal" %>
	<p>
		<%= pin.description %>
	</p>
	<p>
		Posted by <%= link_to (pin.user.firstname + " " + pin.user.lastname), pin.user %>
	</p>
	<p>
		<p><%= pluralize pin.reputation_for(:votes).to_i, "Likes" %> | <%= link_to (pluralize(pin.comments.count, 'comment')), pin %></p>
	</p>
	    <% if current_user == pin.user %>
	   		<%= link_to 'Edit', edit_pin_path(pin) %>
	    	<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	    <% end %>
 </div>


<%= render 'pins/modal' , :pin => pin %>