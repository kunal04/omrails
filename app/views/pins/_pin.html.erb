<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<p>
		<%= pin.description %>
	</p>
	<p>
		Posted by <%= pin.user.firstname %>
	</p>
	    <% if current_user == pin.user %>
	   		<%= link_to 'Edit', edit_pin_path(pin) %>
	    	<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	    <% end %>
 </div>
