<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <!-- Be sure to leave the brand out there if you want it shown -->
      <%= link_to "Animalhutt", root_path, class: "brand" %>
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
        <ul class="nav">
        	<li><%= link_to "Home", root_path %></li>
			     <li><%= link_to "About", about_path %></li>
      	</ul>


<% if user_signed_in? %>
          <ul class="nav pull-right">
          <li class="navpic"><%= image_tag "http://graph.facebook.com/#{current_user.uid}/picture?type=small" %></li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown"><%= current_user.firstname %> <%= current_user.lastname %> <strong class="caret"></strong></a>
            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
              <ul>
                <li><%= link_to "My Account", user_path(current_user) %></li>
                <li><%= link_to "Add Image", new_pin_path %></li>
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>            
            </div>
          </li>
        </ul>

<% else %>
         <ul class="nav pull-right">
          <li><%= link_to "Register", new_user_registration_path %></li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "popup" %>
                <%= link_to "Email Login", new_user_session_path %>
            </div>
          </li>
        </ul>
<% end %>

        
      </div>
 
    </div>
  </div>
</div>
